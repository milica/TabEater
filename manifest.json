{
    "manifest_version": 2,

    "background": {
        "scripts": [ "scripts/background.js" ],
        "persistent": false
    },

    "name": "TabEater",
    "description": "The extension that eats tabs that you define :)",
    "version": "1.0.1",

    "icons": {
        "48": "images/crazy_chicken_hungry_48.png"
    },

    "browser_action": {
        "default_icon": {
            "19": "images/crazy_chicken_hungry_19.png",
            "38": "images/crazy_chicken_hungry_38.png",
            "48": "images/crazy_chicken_hungry_48.png",
            "128": "images/crazy_chicken_hungry_128.png"
        },
        "default_title": "TabEater"
    },

    "commands": {
        "toggle-action": {
            "suggested_key": {
                "default": "Ctrl+Shift+E",
                "mac": "Command+Shift+E",
                "linux": "Ctrl+Shift+E"
            },
            "description": "Send a 'toggle' event to the extension"
        }
    },

    "options_page": "options.html",

    "permissions": [
        "tabs",
        "storage"
    ]

}
