{
    "manifest_version": 2,

    "background": {
        "scripts": [ "scripts/background.js" ],
        "persistent": false
    },

    "name": "TabEater",
    "description": "The extension that eats tabs :)",
    "version": "1.0",

    "browser_action": {
        "default_icon": "images/crazy_chicken_full.png",
        "default_title": "TabEater"
    },
    "options_page": "options.html",
    "permissions": [
        "tabs",
        "storage"
    ]

}